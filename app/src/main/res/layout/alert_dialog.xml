<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:elevation="2dp"
    android:outlineAmbientShadowColor="@color/EndGreen"
    android:outlineSpotShadowColor="@color/EndGreen"
    app:cardBackgroundColor="#F1E8E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/yeonsung"
            android:text="Confirmation"
            android:textColor="@color/EndGreen"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/lato"
            android:text="Are you sure you wan't to start a new activity with the selected location?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_no"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:text="No"
                android:textSize="16sp"
                android:elevation="2dp"
                android:outlineAmbientShadowColor="@color/EndGreen"
                android:outlineSpotShadowColor="@color/EndGreen"
                android:fontFamily="@font/yeonsung"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_green_90"
                app:layout_constraintEnd_toStartOf="@+id/btn_yes"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_yes"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:text="Yes"
                android:textSize="16sp"
                android:elevation="2dp"
                android:outlineAmbientShadowColor="@color/EndGreen"
                android:outlineSpotShadowColor="@color/EndGreen"
                android:fontFamily="@font/yeonsung"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_green_90"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>